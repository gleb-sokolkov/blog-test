<div class="container container-fluid pb-3 rounded mt-3">
	<div class="row">
		<div class="col-12 head">
			<span>Галерея</span>
		</div>
	</div>
	<!-- if galleries -->
	{{#if galleries}}
	{{#each galleries}}
	
	<div class="row gallery-images py-1 pl-1 pr-2 pr-md-3 mb-3 mb-sm-5 border rounded bg-light">
		{{!-- {{#if heroImage}}
				<div class="col-sm-4 col-md-4 gallery-image">
					<img src="{{cloudinaryUrl heroImage width='680' height='680'}}" class="img-rounded">
				</div>
				{{/if}} --}}
		<div class="col-12">
			<h3 class="p-2 p-sm-3 m-0 text-center border-bottom">{{name}}</h3>
		</div>

		<div class="col-12 p-0 pt-3">
			<div class="row no-gutters">
				{{#each images}}
				<div class="col-12 col-md-6 gallery">
					<div class="p-0 py-sm-2 px-sm-3">
						<img src="{{cloudinaryUrl quality='25'}}" loading="lazy" class="rounded">
					</div>
				</div>
				{{/each}}
			</div>
		</div>
	</div>
	{{/each}}
	{{else}}
	<!-- else -->
	<h3 class="text-muted">There are no image galleries yet.</h3>
	{{/if}}
</div>