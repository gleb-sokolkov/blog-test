<div class="container-info mt-md-n5" style="background-color: rgb(233, 236, 239);">
	<div>
		<div class="container">
			<div class="row">
				<div class="col">
					<h1 class="display-4 py-4">Галерея</h1>
				</div>
			</div>
		</div>
		<div class="container bg-light shadow rounded">
			<!-- if galleries -->
			{{#if galleries}}
			{{#each galleries}}
			<div class="row gallery-images py-2 pl-1 pr-3">
				{{!-- {{#if heroImage}}
				<div class="col-sm-4 col-md-4 gallery-image">
					<img src="{{cloudinaryUrl heroImage width='680' height='680'}}" class="img-rounded">
				</div>
				{{/if}} --}}
				<div class="col-12 p-0">
					<div class="row no-gutters">
						{{#each images}}
						<div class="col-12 col-md-3 gallery">
							<div class="py-2 px-3">
								<img src="{{cloudinaryUrl quality='25'}}" loading="lazy">
							</div>
						</div>
						{{/each}}
					</div>
				</div>
			</div>
			{{/each}}
			{{else}}
			<!-- else -->
			<h3 class="text-muted">There are no image galleries yet.</h3>
			{{/if}}
		</div>
	</div>
</div>