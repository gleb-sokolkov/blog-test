<div class="container-info">
	<div>
		<div class="container">
			<h1 class="py-4">Gallery</h1>
		</div>
		<div class="container">
			<!-- if galleries -->
			{{#if galleries}}
			{{#each galleries}}
			<div class="row gallery-images">
				{{#if heroImage}}
				<div class="col-sm-4 col-md-4 gallery-image">
					<img src="{{cloudinaryUrl heroImage width='680' height='680'}}" class="img-rounded">
				</div>
				{{/if}}
				<div class="col-sm-8 col-md-8">
					<div class="row">
						{{#each images}}
						<div class="col gallery-image">
							<img src="{{cloudinaryUrl}}" class="img-fluid">
						</div>
						{{/each}}
					</div>
				</div>
			</div>
			{{/each}}
			{{else}}
			<!-- else -->
			<h3 class="text-muted">There are no image galleries yet.</h3>
			{{/if}}
		</div>
	</div>
</div>