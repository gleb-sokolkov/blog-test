<div class="container container-info border-left border-right bg-light">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article>
				<p><a href="/blog">&larr; Назад к новостям</a></p>
				<hr>
				<header>
					<h1 class="text-dark">{{data.post.title}}</h1>
					<h5 class="text-muted">
						{{{categoryList data.post.categories prefix="Добавлено в "}}}
						{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</h5>
				</header>
				<div class="post">
					{{#if data.post.image}}<img
						src="{{{cloudinaryUrl data.post.image width=750 height=450 crop='fit' }}}"
						class="img-fluid my-3 rounded">{{/if}}
					{{{data.post.content.extended}}}
				</div>
			</article>
		</div>
	</div>
</div>